@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="bg-amber-400 p-4 m-2 rounded-lg shadow-lg">
<p>
    Welcome to the home page of our ASP.NET Core application! This is a simple example of how to create a basic Razor Page. 
</p>
</div>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg mt-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Datos de empleado</h2>
    <form method="post" id="formEmpleado" class="space-y-4">
        <div class="flex flex-col">
            <label for="txtNombre" class="text-sm font-medium text-gray-700 mb-1">Nombre:</label>
            <input type="text" id="txtNombre" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"></input>
        </div>
        <div class="flex flex-col">
            <label for="txtApellido" class="text-sm font-medium text-gray-700 mb-1">Apellido:</label>
            <input type="text" id="txtApellido" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"></input>
        </div>
        <div class="flex flex-col">
            <label for="txtEdad" class="text-sm font-medium text-gray-700 mb-1">Edad:</label>
            <input type="number" id="txtEdad" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"></input>
        </div>    
    </form>

    <button class="w-full mt-6 px-4 py-2 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" id="btnAddUser">
        Crear
    </button>
</div>


<div class="max-w-4xl mx-auto mt-8 bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b pb-2">Lista de Empleados</h2>
    <div class="overflow-x-auto">
        <ul id="empleados" class="divide-y divide-gray-200">
            <!-- Los elementos de la lista se agregarán dinámicamente aquí -->
        </ul>
    </div>
    <!-- Mensaje cuando no hay datos -->
    <div id="noData" class="text-center py-8 text-gray-500">
        <p class="text-lg">No hay empleados registrados</p>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/dist/main.js"></script>
    <script>       
    </script>
    <partial name="_ValidationScriptsPartial" />
}