@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="bg-amber-400 p-4 m-2 rounded-lg shadow-lg">
<p>
    Welcome to the home page of our ASP.NET Core application! This is a simple example of how to create a basic Razor Page. 
</p>
</div>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg mt-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Datos de empleado</h2>
    <form method="post" id="formEmpleado" class="space-y-4">
        <div class="flex flex-col">
            <label asp-for="@Model.Nombre" class="text-sm font-medium text-gray-700 mb-1">Nombre:</label>
            <input type="text"  asp-for="@Model.Nombre"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"/>
            <span asp-validation-for="@Model.Nombre" class="text-red-900"></span>
        </div>
        <div class="flex flex-col">
            <label asp-for="@Model.Apellido" class="text-sm font-medium text-gray-700 mb-1">Apellido:</label>
            <input type="text" asp-for="@Model.Apellido"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"/>
            <span asp-validation-for="@Model.Apellido" class="text-red-900"></span>
        </div>
        <div class="flex flex-col">
            <label asp-for="@Model.Edad" class="text-sm font-medium text-gray-700 mb-1">Edad:</label>
            <input type="number" asp-for="@Model.Edad" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"/>
            <span asp-validation-for="@Model.Edad" class="text-red-900"></span>
        </div>

        <button type="submit" class="w-full mt-6 px-4 py-2 bg-blue-500 text-white font-medium rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" id="btnAddUser">
        Crear
    </button>
    </form>
</div>


<div class="max-w-4xl mx-auto mt-8 bg-white p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b pb-2">Lista de Empleados</h2>
   
   @if(Model.Empleados.Count() > 0)
   {    
   <div class="overflow-x-auto mb-4">
        <ul id="empleados" class="divide-y divide-gray-200">           
        </ul>
    </div>
    <div>    
       <p class="text-gray-600 mb-4"> <span id="totalEmpleados">Total de empleados: @Model.Empleados.Count()</span></p>
    </div>
   }
   else
   {
    <div class="overflow-x-auto mb-4">
        <ul id="empleados" class="divide-y divide-gray-200">          
        </ul>
    </div>
    <div>
     <p class="text-gray-600 mb-4"> <span id="totalEmpleados"></span></p>
    </div>
        
      
    <div id="noData" class="text-center py-8 text-gray-500">
        <p class="text-lg">No hay empleados registrados</p>
    </div>
   }

</div>

@section Scripts {
     
    <script type="module" src="~/dist/main.js"></script>
    <script>
        window.initialEmployeeCount = @Model.Empleados.Count();            
    </script>
    <partial name="_ValidationScriptsPartial" />   
}